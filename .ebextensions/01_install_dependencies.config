commands:
  install_nodejs:
    command: |
      curl --silent --location https://rpm.nodesource.com/setup_8.x | sudo bash -
      yum -y install nodejs
  install_yarn:
    command: |
      sudo wget https://dl.yarnpkg.com/rpm/yarn.repo -O /etc/yum.repos.d/yarn.repo
      yum -y install yarn
      
container_commands:
  seeddb:
    command: 'export HOME=/root; rake db:seed'
    leader_only: true
